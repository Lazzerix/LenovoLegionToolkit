<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Settings.SensorSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.SettingsPage_SensorSettings_Title}"
    Width="500"
    Height="400"
    MinWidth="500"
    MinHeight="400"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    ResizeMode="CanMinimize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            x:Name="_titleBar"
            Grid.Row="0"
            CanMaximize="false"
            ShowMaximize="false"
            ShowMinimize="false"
            UseSnapLayout="false" />

        <Grid
            Grid.Row="0"
            Height="24"
            Margin="12,8,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="12"
                IsHitTestVisible="False"
                Text="{x:Static resources:Resource.SettingsPage_SensorSettings_Title}" />

        </Grid>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,0,0,16"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="16,0,16,0">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="{x:Static resources:Resource.SensorSettingsPage_Title}" />
                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl Title="{x:Static resources:Resource.SensorSettingsPage_CPU_Frequency_Title}" Subtitle="{x:Static resources:Resource.SensorSettingsPage_CPU_Frequency_Message}" />
                    </custom:CardControl.Header>
                    <ComboBox x:Name="_cpuFrequencySelector" MinWidth="140">
                        <ComboBoxItem Content="{x:Static resources:Resource.SensorSettingsPage_Max_Frequency_Title}" />
                        <ComboBoxItem Content="{x:Static resources:Resource.SensorSettingsPage_Average_Frequency_Title}" />
                    </ComboBox>
                </custom:CardControl>

                <custom:CardControl x:Name="_gpuSelectionCard" Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl Title="{x:Static resources:Resource.SensorSettingsPage_Preferred_GPU_Title}" Subtitle="{x:Static resources:Resource.SensorSettingsPage_Preferred_GPU_Message}" />
                    </custom:CardControl.Header>
                    <ComboBox x:Name="_gpuSelector" MinWidth="140">
                        <ComboBoxItem Content="{x:Static resources:Resource.SensorSettingsPage_Discrete_GPU_Title}" />
                        <ComboBoxItem Content="{x:Static resources:Resource.SensorSettingsPage_IGPU_Title}" />
                    </ComboBox>
                </custom:CardControl>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" Margin="12,8,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <wpfui:Button
                Grid.Column="0"
                MinWidth="80"
                Margin="0,0,0,0"
                Click="DefaultButton_Click"
                Content="{x:Static resources:Resource.Default}" />

            <wpfui:Button
                Grid.Column="2"
                MinWidth="80"
                Margin="0,0,8,0"
                Appearance="Secondary"
                Click="CancelButton_Click"
                Content="{x:Static resources:Resource.Cancel}" />

            <wpfui:Button
                Grid.Column="3"
                MinWidth="80"
                Appearance="Primary"
                Click="ApplyButton_Click"
                Content="{x:Static resources:Resource.Apply}" />
        </Grid>
    </Grid>
</local:BaseWindow>
